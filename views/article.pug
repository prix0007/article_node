extends layout

block content
    hr
    h2= article.title
    br
    h6 Written by #{author}
    br
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-success(href='/articles/edit/'+article._id) Update Article
            a.btn.btn-danger.delete-article(href='#', data-id= article._id) Delete
